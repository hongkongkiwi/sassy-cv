# ========================================
# Core Services (Required)
# ========================================

# Convex Database URL (get from https://dashboard.convex.dev)
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# Clerk Authentication (get from https://dashboard.clerk.com)
# Leave empty to disable authentication features
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key
CLERK_SECRET_KEY=sk_test_your-key

# ========================================
# AI Providers (Optional)
# ========================================

# OpenAI API Key (for GPT-4 features)
OPENAI_API_KEY=sk-your-openai-api-key

# Google AI API Key (for Gemini features) 
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key

# ========================================
# Deployment Configuration
# ========================================

# Deployment target: "cloudflare" for static export or "vercel" for server-side
DEPLOY_TARGET=cloudflare

# Node environment
NODE_ENV=development

# Expose environment to client (optional; defaults to NODE_ENV)
NEXT_PUBLIC_NODE_ENV=development

# ========================================
# App Configuration (Optional)
# ========================================

# Public site URL (used for CORS and redirects)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# App display name
NEXT_PUBLIC_APP_NAME=Sassy CV

# Default theme: "modern", "classic", "minimal", or "dark"
NEXT_PUBLIC_DEFAULT_THEME=modern

# Public user ID (for anonymous CV viewing)
NEXT_PUBLIC_PUBLIC_USER_ID=public-cv-owner

# ========================================
# Security & Rate Limiting (Optional)
# ========================================

# API rate limiting
RATE_LIMIT_API_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=https://example.com,https://another-domain.com

# Arcjet protection
# Get your key from https://dashboard.arcjet.com
ARCJET_KEY=ajk_live_xxx
# Mode can be LIVE (enforce) or DRY_RUN (observe only)
ARCJET_MODE=DRY_RUN

# ========================================
# Clerk Webhook (Optional)
# ========================================

# Clerk webhook secret for user sync
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# ========================================
# Clerk URLs (Optional - defaults provided)
# ========================================

NEXT_PUBLIC_CLERK_SIGN_IN_URL=/admin/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/admin/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/admin
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/admin

# ========================================
# LinkedIn Integration (Optional)
# ========================================

# LinkedIn OAuth credentials
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ========================================
# Feature Flags (Optional)
# ========================================

# Enable/disable features
ENABLE_LINKEDIN_IMPORT=false
ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PDF_EXPORT=true

# ========================================
# Analytics (Optional)
# ========================================

# Vercel Analytics ID
VERCEL_ANALYTICS_ID=your-analytics-id

# ========================================
# Development & Testing
# ========================================

# Skip environment validation (for CI/CD)
SKIP_ENV_VALIDATION=false

# Playwright testing base URL
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Enable Next.js bundle analyzer at build time
ANALYZE=false