{
  "name": "portfolio-cv",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:static": "DEPLOY_TARGET=cloudflare next build",
    "start": "next start",
    "lint": "SKIP_ENV_VALIDATION=true next lint",
    "lint:ci": "next lint --max-warnings=0",
    "deploy": "pnpm build:static && wrangler pages deploy out --project-name=sassy-cv",
    "deploy:staging": "pnpm build:static && wrangler pages deploy out --project-name=sassy-cv --env=staging",
    "deploy:vercel": "DEPLOY_TARGET=vercel vercel --prod",
    "deploy:vercel:staging": "DEPLOY_TARGET=vercel vercel",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "analyze": "ANALYZE=true next build",
    "analyze:cloudflare": "DEPLOY_TARGET=cloudflare ANALYZE=true next build",
    "analyze:vercel": "DEPLOY_TARGET=vercel ANALYZE=true next build",
    "postinstall": "convex codegen"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@arcjet/next": "^1.0.0-beta.10",
    "@ai-sdk/google": "^2.0.3",
    "@ai-sdk/openai": "^2.0.8",
    "@ai-sdk/provider": "^2.0.0",
    "@clerk/clerk-react": "^5.40.0",
    "@clerk/nextjs": "^6.30.0",
    "@react-pdf/renderer": "^4.3.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "ai": "^5.0.9",
    "convex": "^1.25.4",
    "file-saver": "^2.0.5",
    "isomorphic-dompurify": "^2.26.0",
    "next": "^15.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.13",
    "@next/bundle-analyzer": "^15.4.6",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^9.1.2",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "vercel": "^39.4.2",
    "vitest": "^3.2.4",
    "wrangler": "^3.114.13"
  }
}
